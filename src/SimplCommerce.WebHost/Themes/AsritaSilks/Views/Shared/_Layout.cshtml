@using System.Globalization

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Asrita Silks</title>
    @RenderSection("additionalMeta", false)

    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/lib/bootstrap4/css/bootstrap.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/toastr/build/toastr.min.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/AsritaSilks/fonts/font-awesome-4.7.0/css/font-awesome.min.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/AsritaSilks/fonts/iconic/css/material-design-iconic-font.min.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/AsritaSilks/fonts/linearicons-v1.0.0/icon-font.min.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/lib/bootstrap-star-rating/css/star-rating.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/AsritaSilks/vendor/animate/animate.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/AsritaSilks/vendor/css-hamburgers/hamburgers.min.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/AsritaSilks/vendor/animsition/css/animsition.min.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/AsritaSilks/vendor/slick/slick.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/AsritaSilks/css/util.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/AsritaSilks/css/main.css" />
    <link simpl-append-version="true" rel="stylesheet" type="text/css" href="~/themes/AsritaSilks/css/simpl.css" />
    <script simpl-append-version="true" src="~/lib/angular/angular.js"></script>

    @RenderSection("head", required: false)
</head>
<body class="animsition">
    <!-- Header -->
    <header class="header-v4">
        <!-- Header desktop -->
        <div class="container-menu-desktop">
            <!-- Topbar -->
            <div class="top-bar">
                <div class="content-topbar flex-sb-m h-full container">
                    <div class="left-top-bar">
                        @Localizer["Free shipping all over India"]
                    </div>

                    <div class="right-top-bar flex-w h-full">
                        <a href="~/help-center" class="flex-c-m trans-04 p-lr-25 hov-cl2">
                            @Localizer["Help & FAQs"]
                        </a>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>

            <div class="wrap-menu-desktop">
                <nav class="limiter-menu-desktop container">

                    <!-- Logo desktop -->
                    <a href="~/" class="logo">
                        <img src="~/themes/AsritaSilks/images/logo.png" alt="IMG-LOGO">
                    </a>

                    <!-- Menu desktop -->
                    <div class="menu-desktop">
                        <ul class="main-menu">
                            @await Component.InvokeAsync("CategoryMenu")
                        </ul>
                    </div>

                    <!-- Icon header -->
                    <div class="wrap-icon-header flex-w flex-r-m">
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
                            <i class="zmdi zmdi-search"></i>
                        </div>

                        @await Component.InvokeAsync("CartBadge")
                    </div>
                </nav>
            </div>
        </div>
        <!-- Header Mobile -->
        <div class="wrap-header-mobile">
            <!-- Logo moblie -->
            <div class="logo-mobile">
                <a href="~/"><img src="~/themes/AsritaSilks/images/logo.png" alt="IMG-LOGO"></a>
            </div>

            <!-- Icon header -->
            <div class="wrap-icon-header flex-w flex-r-m m-r-15">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 js-show-modal-search">
                    <i class="zmdi zmdi-search"></i>
                </div>

                @await Component.InvokeAsync("CartBadge")
            </div>

            <!-- Button show menu -->
            <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </div>
        </div>
        <!-- Menu Mobile -->
        <div class="menu-mobile">
            <ul class="topbar-mobile">
                <li>
                    <div class="left-top-bar">
                        @Localizer["Free shipping all over India"]
                    </div>
                </li>

                <li>
                    <div class="right-top-bar flex-w h-full">
                        <a href="#" class="flex-c-m p-lr-10 trans-04">
                            @Localizer["Help & FAQs"]
                        </a>

                        <partial name="_LoginPartial" />
                    </div>
                </li>
            </ul>

            <ul class="main-menu-m">
                @await Component.InvokeAsync("CategoryMenu")
            </ul>
        </div>
        <!-- Modal Search -->
        @await Component.InvokeAsync("SearchForm")
    </header>

    @RenderSection("featured", false)

    <div class="container body-content">
        @RenderBody()
    </div>
    <!-- Footer -->
    <footer class="bg5 p-t-75 p-b-32 m-t-75">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-lg-3 p-b-50">
                    <h4 class="stext-301 cl0 p-b-30">
                        @Localizer["Categories"]
                    </h4>
                    <vc:menu menu-id="2"></vc:menu>
                </div>

                <div class="col-sm-6 col-lg-3 p-b-50">
                    <h4 class="stext-301 cl0 p-b-30">
                        @Localizer["About"]
                    </h4>
                    <vc:menu menu-id="1"></vc:menu>
                </div>

                <div class="col-sm-6 col-lg-3 p-b-50">
                    <h4 class="stext-301 cl0 p-b-30">
                        @Localizer["Information"]
                    </h4>
                    <vc:menu menu-id="3"></vc:menu>
                </div>

                <div class="col-sm-6 col-lg-3 p-b-50">
                    <h4 class="stext-301 cl0 p-b-30">
                        @Localizer["Get in Touch"]
                    </h4>

                    <p class="stext-107 cl0 size-201">
                        Any questions? Let us know in store at 732, Madurai Road, Theni - 625531, TamilNadu, INDIA or call us on (+91) 4546 260712
                    </p>

                    <div class="p-t-27">
                        <a href="https://wa.me/914546260712" target="_blank" class="fs-18 cl0 hov-cl2 trans-04 m-r-16">
                            <i class="fa fa-whatsapp"></i>
                        </a>

                        <a href="https://www.facebook.com/asritasilkstheni" target="_blank" class="fs-18 cl0 hov-cl2 trans-04 m-r-16">
                            <i class="fa fa-facebook"></i>
                        </a>

                        <a href="#" target="_blank" class="fs-18 cl0 hov-cl2 trans-04 m-r-16">
                            <i class="fa fa-twitter"></i>
                        </a>

                        <a href="#" target="_blank" class="fs-18 cl0 hov-cl2 trans-04 m-r-16">
                            <i class="fa fa-youtube"></i>
                        </a>
                    </div>                    
                </div>
            </div>

            <div>
                <p class="stext-107 cl9 txt-center">
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script>  Asrita Silks | Powered by <a href="https://jeyantechnologies.com" class="stext-107 cl9 hov-cl0 trans-04" target="_blank">Jeyan Technologies</a> | This theme is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" class="stext-107 cl9 hov-cl0 trans-04" target="_blank">Colorlib</a>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </p>
            </div>
        </div>
    </footer>

    <!-- Back to top -->
    <div class="btn-back-to-top" id="myBtn">
        <span class="symbol-btn-back-to-top">
            <i class="zmdi zmdi-chevron-up"></i>
        </span>
    </div>
    <div id="shopModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>
    <div id="productOverview" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
            </div>
        </div>
    </div>
    <script>
        window.simplGlobalSetting = {};
        window.simplGlobalSetting.lang = '@CultureInfo.CurrentCulture.Name';
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap4/js/bootstrap.js"></script>
    <script simpl-append-version="true" src="~/lib/multi-dropdown-menu/js/bootstrap-4-navbar.js"></script>
    <script simpl-append-version="true" src="~/lib/matchheight/jquery.matchHeight.js"></script>
    <script simpl-append-version="true" src="~/lib/toastr/build/toastr.min.js"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/star-rating.js"></script>
    @if (CultureInfo.CurrentCulture.Name == "vi-VN")
    {
        <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/locales/vi-vn.js"></script>
    }

    <script simpl-append-version="true" src="~/themes/AsritaSilks/vendor/animsition/js/animsition.min.js"></script>
    <script simpl-append-version="true" src="~/themes/AsritaSilks/vendor/slick/slick.min.js"></script>
    <script simpl-append-version="true" src="~/themes/AsritaSilks/js/slick-custom.js"></script>
    <script simpl-append-version="true" src="~/themes/AsritaSilks/js/asritasilks.js"></script>
    <script simpl-append-version="true" src="~/modules/core/main.js"></script>
    <script simpl-append-version="true" src="~/modules/shoppingcart/add-to-cart.js"></script>
    <script simpl-append-version="true" src="~/modules/productcomparison/product-comparison.js"></script>
    @RenderSection("scripts", required: false)

    <partial name="_AnalyticsScript" />
</body>
</html>
